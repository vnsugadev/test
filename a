<script>
  const audio = document.getElementById('audio');
  const leftGif = document.getElementById('leftGif');
  const rightGif = document.getElementById('rightGif');
  const flashingText = document.getElementById('flashingText');

  audio.addEventListener('play', () => {
    leftGif.style.visibility = 'visible';
    rightGif.style.visibility = 'visible';
    flashingText.textContent = 'GAGI MAURO!!!!!!!!!!!!!';
  });

  audio.addEventListener('pause', () => {
    leftGif.style.visibility = 'hidden';
    rightGif.style.visibility = 'hidden';
    flashingText.textContent = 'gehgehahmoor';
  });
</script>

