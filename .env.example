# Reddit API Configuration
# Copy this file to .env and fill in your Reddit API credentials

# Reddit App Credentials (get these from https://www.reddit.com/prefs/apps)
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
REDDIT_USER_AGENT=RedditBanTracker/1.0 by YourUsername

# Reddit account credentials (REQUIRED for mute_banned_users.py to send modmail responses)
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password

# Mute Banned Users Bot Configuration
TARGET_RULE=Rule 7
RESPONSE_TEMPLATE=Your message has been received. Due to your recent ban for {rule}, your ability to message the moderators has been temporarily restricted.
MAX_CONVERSATIONS_PER_RUN=50
CONVERSATION_CACHE_DAYS=30
DRY_RUN=false
AUTO_MUTE=true

# Optional: Webhook URL for notifications (leave empty to disable)
# WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url